{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "rootDir": "./src", // Root directory for .ts files
    "outDir": "./dist", // Output directory for .js files
    "noImplicitAny": false
  },
  "include": ["src/**/*"], // Include all files in the src folder
  "exclude": ["node_modules", "dist"] // Exclude node_modules and output folder
}
